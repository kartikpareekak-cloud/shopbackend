# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Server Configuration
PORT=5000

# MongoDB Configuration
# Replace with your actual MongoDB connection string
MONGO_URI=mongodb://localhost:27017/your_database_name
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure random string for production (minimum 32 characters)
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=1d

# Cloudinary Configuration (Image Upload Service)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# WhatsApp API Configuration (Twilio) - Optional
# Get these from: https://www.twilio.com/console
# Leave empty to disable WhatsApp notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
ADMIN_WHATSAPP_NUMBER=+919876543210

# Admin User Credentials (for initial setup)
# These will be used to create an admin user automatically on first startup
# Change these for production!
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Admin
ADMIN_PASSWORD=change_this_secure_password

# Optional: Email Configuration (if you add email features later)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_FROM=noreply@yourdomain.com

# Optional: Payment Gateway (if you add payment features)
# RAZORPAY_KEY_ID=your_razorpay_key
# RAZORPAY_KEY_SECRET=your_razorpay_secret

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379

# Node Environment
# NODE_ENV=development
# NODE_ENV=production
